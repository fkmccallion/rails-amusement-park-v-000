<h1>User Signup</h1>

<%= form_for(@user) do |f| %>
  <p>
    <label>User Name:</label>
    <%= f.text_field :name %>
  </p>
  <p>
    <label>User Height:</label>
    <%= f.text_field :height %>
  </p>
  <p>
    <label>User Happiness:</label>
    <%= f.text_field :happiness %>
  </p>
  <p>
    <label>User Nausea:</label>
    <%= f.text_field :nausea %>
  </p>
  <p>
    <label>User Tickets:</label>
    <%= f.text_field :tickets %>
  </p>
  <p>
    <label>User Password:</label>
    <%= f.text_field :password %>
  </p>
  <p>
    <label>Check this box if you're an owner: </label>
    <%= f.check_box :admin %>
  </p>

  <%= f.submit %>
<% end %>
